<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="18dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/app_bg"
        android:layout_width="332dp"
        android:layout_height="314dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_bg_alt"
        android:src="@drawable/login_bg" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/poppins_bold"
        android:paddingBottom="0dp"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck"
        />

    <TextView
        android:id="@+id/app_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elegantTextHeight="true"
        android:fontFamily="@font/poppins"
        android:text="@string/app_sub" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/form_email"
        android:textAlignment="center"
        android:textColor="?android:textColorSecondary"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">

        <com.google.android.material.textfield.TextInputEditText
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:id="@+id/email"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:elegantTextHeight="true"
            android:textColorHighlight="@color/bs_white"
            android:fontFamily="@font/poppins"
            android:hint="@string/login_form_email"
            android:textColor="@color/bs_dark"
            android:padding="0dp"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/form_password"
        app:passwordToggleEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:maxLines="1"
            android:id="@+id/password"

            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:elegantTextHeight="true"
            android:padding="0dp"
            android:fontFamily="@font/poppins"
            android:hint="@string/login_form_senha"
            android:inputType="textPassword"
            android:textColor="@color/bs_dark"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/form_submit"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/bs_blue"
        android:elegantTextHeight="true"
        android:fontFamily="@font/poppins"
        android:text="@string/login_form_submit"
        app:cornerRadius="8dp"
        app:icon="@drawable/baseline_check_circle_24"
        app:iconGravity="textEnd"
        app:iconPadding="6dp"
        />

    <TextView
        android:id="@+id/app_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/poppins"
        android:text="@string/app_footer"
        android:layout_marginTop="16dp"
        android:textSize="12sp" />
</LinearLayout>
</ScrollView>
